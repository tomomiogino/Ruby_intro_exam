<%= form_with(model: @tweet, local: true, url: choose_new_or_edit) do |form| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="new_tweet">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit "登録する" %>
<% end %>
<div class="btn">
  <%= link_to "ツイート一覧画面に戻る", tweets_path %>
</div>
